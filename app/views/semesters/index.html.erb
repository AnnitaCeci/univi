<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col xl4 l4 m4 s4">
    <h3>Semestres</h3>
  </div>
  <div class="col xl8 l8 m8 s8 right-align">
    <%= link_to 'Agregar Semestre', new_semester_path,  { :class=>"waves-effect waves-green btn"} %>
  </div>
</div>

<hr>
<table id="carreras" class="highlight centered  responsive-table">
  <thead>
  <tr>
    <th>Clave</th>
    <th>Nombre</th>
    <th colspan="3">Opciones</th>
  </tr>
  </thead>

  <tbody>
  <% @semesters.each do |semester| %>
    <tr>
      <td><%= semester.clave %></td>
      <td><%= semester.nombre %></td>
      <td> <%= link_to '<i class="small material-icons color-icons">edit</i>'.html_safe, edit_semester_path(semester) %> </td>
      <td> <%= link_to '<i class="small material-icons color-icons">delete</i>'.html_safe, semester, method: :delete, data: { confirm: '¿Está Seguro?' } %> </td>
    </tr>
  <% end %>
  </tbody>
</table>