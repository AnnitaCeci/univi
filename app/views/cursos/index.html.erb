<p id="notice"><%= notice %></p>

<h1>Cursos</h1>

<table>
  <thead>
    <tr>
      <th>Asignatura</th>
      <th>Periodo</th>
      <th>Profesor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.asignatura.nombre %></td>
        <td><%= curso.periodo.nombre %></td>
        <td><%= curso.profesor.nombre + " " + curso.profesor.apellido_paterno + " "+ curso.profesor.apellido_materno%></td>
        <td><%= link_to 'Mostrar', curso %></td>
        <td><%= link_to 'Editar', edit_curso_path(curso) %></td>
        <td><%= link_to 'Eliminar', curso, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar el curso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

