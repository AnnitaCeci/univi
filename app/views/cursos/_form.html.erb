  </div>


  <div class="field">
    <%= form.label :periodo_id %>
    <%#= form.text_field :periodo_id, id: :curso_periodo_id %>
    <%= form.collection_select :periodo_id, Periodo.all, :id, :nombre, { prompt: "Seleccione un Periodo" }, class: "browser-default" %>
  </div>

  <div class="field">
    <%= form.label :profesor_id %>
    <%#= form.text_field :profesor_id, id: :curso_profesor_id %>
    <%= form.collection_select :profesor_id, Profesor.all, :id, :nombre, { prompt: "Seleccione un Profesor" }, class: "browser-default" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
