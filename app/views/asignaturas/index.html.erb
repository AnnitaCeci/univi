<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col l4">
    <h4>Asignaturas</h4>
  </div>
</div>

<div class="row">
  <div class="col xl12 l12 m12 s12 right-align">
    <%= link_to 'Agregar Asignatura', new_asignatura_path,  { :class=>"waves-effect waves-green btn"} %>
  </div>
</div>


<hr>

      <table id="asignaturas" class="highlight centered  responsive-table">
        <thead>
        <tr>
          <th>Clave</th>
          <th>Nombre</th>
          <th>Creditos</th>
          <th>Horas</th>
          <th colspan="3">Opciones</th>
        </tr>
        </thead>

        <tbody>
        <% @asignaturas.each do |asignatura|%>
          <tr>
            <td><%= asignatura.clave %></td>
            <td><%= asignatura.nombre %></td>
            <td><%= asignatura.creditos %></td>
            <td><%= asignatura.horas %></td>
            <!--<td><%#= link_to 'Show', asignatura %></td>-->
            <td><%= link_to '<i class="small material-icons color-icons tooltipped" data-position="top" data-delay="50" data-tooltip="Editar">edit</i>'.html_safe, edit_asignatura_path(asignatura) %></td>
            <td><%= link_to '<i class="small material-icons color-icons tooltipped" data-position="top" data-delay="50" data-tooltip="Eliminar">delete</i>'.html_safe, asignatura, method: :delete, data: { confirm: '¿Está Seguro?' }%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
<br>

