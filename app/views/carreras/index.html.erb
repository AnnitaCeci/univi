<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col l4">
    <h3>Carreras</h3>
  </div>
</div>

<div class="row">
  <div class="col xl12 l12 m12 s12 right-align">
    <%= link_to 'Agregar Carrera', new_carrera_path,  { :class=>"waves-effect waves-green btn"} %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col xl12 l12 m12 s12">
    <div class="resposible-table">
      <table id="carreras" class="highlight centered">
        <thead>
        <tr>
          <th>Clave</th>
          <th>Nombre</th>
          <th colspan="3">Opciones</th>
        </tr>
        </thead>

        <tbody>
        <% @carreras.each do |carrera| %>
          <tr>
            <td><%= carrera.clave %></td>
            <td><%= carrera.nombre %></td>
            <!--<td><%#= link_to 'Show', carrera %></td>-->
            <td><%= link_to '<i class="small material-icons color-icons tooltipped" data-position="top" data-delay="50" data-tooltip="Editar">edit</i>'.html_safe, edit_carrera_path(carrera) %></td>
            <td><%= link_to '<i class="small material-icons color-icons tooltipped" data-position="top" data-delay="50" data-tooltip="Eliminar">delete</i>'.html_safe, carrera, method: :delete, data: { confirm: '¿Está Seguro?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>



<script type="text/javascript">
    $(document).ready(function() {
         $("#carreras").dataTable();
    });

    $(document).ready(function(){
        $('.tooltipped').tooltip({delay: 50});
    });
</script>