<p id="notice"><%= notice %></p>

<h1>Periodos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Inicio</th>
      <th>Fin</th>
      <th>Tipo</th>
      <!--<th>Current</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periodos.each do |periodo| %>
      <tr>
        <td><%= periodo.nombre %></td>
        <td><%= periodo.inicio %></td>
        <td><%= periodo.fin %></td>
        <td><%= periodo.tipo %></td>
        <!--<td><%= periodo.current %></td>-->
        <td><%= link_to 'Mostrar', periodo %></td>
        <td><%= link_to 'Editar', edit_periodo_path(periodo) %></td>
        <td><%= link_to 'Eliminar', periodo, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar el periodo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

